{
  "name": "AutomaLarWEB",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspace",

  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": "true",
      "configureZshAsDefaultShell": "true",
      "upgradePackages": "true"
    }
  },

  // --- Lifecycle Hooks ---
  "initializeCommand": "echo 'Starting Dev Container setup...'",
  // Runs ONCE after container is created. Ensures workspace owned by 'node'.
  "postCreateCommand": "sudo chown -R node:node /workspace",
  // Runs EVERY time container starts. Installs deps and generates Prisma client.
  "postStartCommand": "cd /workspace && yarn install --frozen-lockfile || (yarn install && npx prisma generate)",
  // Runs EVERY time VS Code attaches. Just a friendly message and Git config.
  "postAttachCommand": {
    "server": "echo 'Attached to AutomaLarWEB Dev Container! ðŸ”¥' && git config --global --add safe.directory ${containerWorkspaceFolder}"
  },

  // --- Port Forwarding ---
  "portsAttributes": {
    "3000": { "label": "Next.js App", "onAutoForward": "openPreview" },
    "6006": { "label": "Storybook", "onAutoForward": "notify" },
    "5432": { "label": "PostgreSQL DB", "onAutoForward": "silent" },
    "5555": { "label": "Prisma Studio", "onAutoForward": "openPreview" },
    "8000": { "label": "Cognee MCP", "onAutoForward": "silent" }
  },

  // --- VS Code Customizations ---
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "eamodio.gitlens",
        "github.vscode-pull-request-github",
        "ms-azuretools.vscode-docker",
        "ms-vscode.vscode-typescript-next",
        "streetsidesoftware.code-spell-checker",
        "usernamehw.errorlens",
        "oderwat.indent-rainbow",
        "christian-kohler.path-intellisense",
        "formulahendry.auto-rename-tag",
        "wayou.vscode-todo-highlight",
        "mikestead.dotenv",
        "wix.vscode-import-cost",
        "pkief.material-icon-theme",
        "ms-vsliveshare.vsliveshare",
        "rangav.vscode-thunder-client",
        "johnpapa.vscode-peacock",
        "bradlc.vscode-tailwindcss",
        "orta.vscode-jest",
        "prisma.prisma",
        "slevesque.shader",
        "RooVeterinaryInc.roo-cline"
      ]
    }
  },
  "remoteUser": "node",
  "shutdownAction": "stopCompose"
}
